---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 595px;
    margin: 0 auto 2.625rem;
  }

  h2 {
    margin-bottom: 0.5rem;
    font-weight: 700;
    font-size: 1.5rem;
  }
</style>
