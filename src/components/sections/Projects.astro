---
import Section from "@/components/Section.astro";

import { projects } from "@/cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`Ver el proyecto ${name}`}>
                    {name}
                  </a>
                  {isActive && <span>â€¢</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlights) => {
                  return <span>{highlights}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(193px, 1fr));
    gap: 0.5rem;
  }

  article {
    border-radius: 0.5rem;
    border: 1px solid #bcbcbc;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  header {
    flex: 1;
  }

  a {
    color: #111;
  }

  a:hover {
    text-decoration: underline;
  }

  h3 {
    margin-bottom: 0.625rem;
    color: #030712;
    font-weight: 600;
    font-size: 1rem;
  }

  h3 span {
    color: #22c55e;
  }

  p {
    font-size: 0.75rem;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 0.5rem;
    background: #eee;
    color: #6b7280;
    font-size: 0.625rem;
    font-family: "Monaspace Argon";
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
