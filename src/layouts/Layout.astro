---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: "N27";
		src:
			url("/fonts/n27/extralight.woff") format("woff"),
			url("/fonts/n27/extralight.woff2") format("woff2"),
			url("/fonts/n27/extralight.ttf") format("truetype");
		font-weight: 300;
		font-display: swap;
		font-style: normal;
	}

	@font-face {
		font-family: "N27";
		src:
			url("/fonts/n27/light.woff") format("woff"),
			url("/fonts/n27/light.woff2") format("woff2"),
			url("/fonts/n27/light.ttf") format("truetype");
		font-weight: 300;
		font-display: swap;
		font-style: normal;
	}

	@font-face {
		font-family: "N27";
		src:
			url("/fonts/n27/regular.woff") format("woff"),
			url("/fonts/n27/regular.woff2") format("woff2"),
			url("/fonts/n27/regular.ttf") format("truetype");
		font-weight: 400;
		font-display: swap;
		font-style: normal;
	}

	@font-face {
		font-family: "N27";
		src:
			url("/fonts/n27/medium.woff") format("woff"),
			url("/fonts/n27/medium.woff2") format("woff2"),
			url("/fonts/n27/medium.ttf") format("truetype");
		font-weight: 500;
		font-display: swap;
		font-style: normal;
	}

	@font-face {
		font-family: "N27";
		src:
			url("/fonts/n27/bold.woff") format("woff"),
			url("/fonts/n27/bold.woff2") format("woff2"),
			url("/fonts/n27/bold.ttf") format("truetype");
		font-weight: 700;
		font-display: swap;
		font-style: normal;
	}

	@font-face {
		font-family: "Monaspace Neon";
		src: url("/fonts/monaspace/NeonVarVF.ttf") format("truetype-variations");
		font-weight: 100 900;
		font-stretch: 50% 200%;
		font-display: swap;
		font-style: normal;
	}

	@font-face {
		font-family: "Monaspace Argon";
		src: url("/fonts/monaspace/ArgonVarVF.ttf") format("truetype-variations");
		font-weight: 100 900;
		font-stretch: 50% 200%;
		font-display: swap;
		font-style: normal;
	}

	html {
		font-family: "Monaspace Neon", monospace;
	}

	* {
		min-width: 0;
		font: inherit;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	img,
	figure,
	video,
	svg {
		display: block;
		height: auto;
		max-width: 100%;
	}

	body {
		margin: 0;
		min-height: 100dvh;
		min-height: 100vh;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		margin: 0;
		font-family: "N27";
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		color: #666;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
</style>
